<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/albumPosterImg"
        android:layout_width="160dp"
        android:layout_height="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/albumNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:paddingVertical="4dp"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/albumPosterImg"
        app:layout_constraintTop_toBottomOf="@+id/albumPosterImg"
        app:layout_constraintRight_toRightOf="@+id/albumPosterImg"/>


</androidx.constraintlayout.widget.ConstraintLayout>